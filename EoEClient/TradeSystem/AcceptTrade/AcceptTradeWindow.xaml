<Window x:Class="EoE.Client.TradeSystem.AcceptTradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EoE.Client.TradeSystem"
        mc:Ignorable="d"
        Title="AcceptTradeWindow" Height="450" Width="800"
        Background="LightGray">
    <Grid>
        <Label Content="Whether to accept the current transaction?" HorizontalAlignment="Left" Margin="17,19,0,0" VerticalAlignment="Top" FontSize="25" Height="49" Width="726"/>
        <TextBlock HorizontalAlignment="Left" Margin="17,65,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="178" Width="685" Background="White"/>
        <Button x:Name="accept" Content="Accept" HorizontalAlignment="Left" Margin="52,311,0,0" VerticalAlignment="Top" FontSize="25" Background="White" Height="66" Width="174" Click="accept_Click"/>
        <Button x:Name="reject" Content="Reject" HorizontalAlignment="Left" Margin="471,311,0,0" VerticalAlignment="Top" Background="White" Height="66" Width="174" FontSize="25" RenderTransformOrigin="0.503,0.129" Click="reject_Click"/>

    </Grid>
</Window>
