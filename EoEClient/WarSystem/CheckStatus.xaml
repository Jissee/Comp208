<Window x:Class="EoE.Client.WarSystem.CheckStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EoE.Client.WarSystem"
        mc:Ignorable="d"
        Title="CheckStatus" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="422*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Label Content="&quot;War... always brings casualties, doesn't it?&quot;" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="457,329,0,0" VerticalAlignment="Top" Height="46" Width="124" FontSize="20" Click="Button_Click"/>
        <Button Content="Check" HorizontalAlignment="Left" Margin="193,329,0,0" VerticalAlignment="Top" FontSize="20" Height="46" Width="124" Click="Button_Click_1"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="307,142,307,160"/>
        <Label Content="Choose a war:" HorizontalAlignment="Center" Margin="0,77,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>

    </Grid>
</Window>
