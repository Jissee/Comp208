        <Label x:Name="Resource6" Content="Industrial:" HorizontalAlignment="Left" Margin="270,172,0,0" VerticalAlignment="Top" Height="36" Width="108" FontSize="20"/>
        <TextBlock x:Name="Silicon" HorizontalAlignment="Left" Margin="172,56,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="28" Width="69" FontSize="20"/>
        <TextBlock x:Name="Copper" HorizontalAlignment="Left" Margin="172,117,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="28" Width="69" FontSize="20"/>
