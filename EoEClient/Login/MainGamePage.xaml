        <TextBlock x:Name="Industrial" HorizontalAlignment="Left" Margin="383,176,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="28" Width="69" FontSize="20"/>
        <Label x:Name="People" Content="Population: " HorizontalAlignment="Left" Margin="138,267,0,0" VerticalAlignment="Top" Height="34" FontSize="20"/>
        <TextBlock x:Name="Population" HorizontalAlignment="Left" Margin="270,274,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="27" Width="102" FontSize="20"/>
        <Label Content="Round Number:" HorizontalAlignment="Left" Margin="48,361,0,0" VerticalAlignment="Top" FontSize="16"/>
